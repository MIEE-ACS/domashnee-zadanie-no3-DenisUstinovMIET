<Window x:Class="DZ3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DZ3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="BT" Content="Посчитать" HorizontalAlignment="Left" Margin="485,144,0,0" VerticalAlignment="Top" Width="120" Height="23" Click="Button_Click"/>
        <Label x:Name="lbl" Content="Итог:" HorizontalAlignment="Left" Margin="207,228,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RdBt1" Content="Подсчёт Гласных" HorizontalAlignment="Left" Margin="58,216,0,0" VerticalAlignment="Top" Width="126" Checked="RdBt1_Checked"/>
        <RadioButton x:Name="RdBt2" Content="Подсчёт Согласных" HorizontalAlignment="Left" Margin="58,246,0,0" VerticalAlignment="Top" Width="126" Checked="RdBt2_Checked"/>
        <TextBox x:Name="tbIn" HorizontalAlignment="Left" Height="117" Margin="385,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="319" AcceptsReturn="True" TextChanged="tbIn_TextChanged"/>
        <TextBox x:Name="tbOut" HorizontalAlignment="Left" Height="23" Margin="250,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>

    </Grid>
</Window>
